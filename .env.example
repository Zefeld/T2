# Database Configuration
POSTGRES_DB=career_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/career_development

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OIDC Configuration
OIDC_ISSUER_URL=https://your-oidc-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URI=http://localhost:3001/auth/callback



# Gamification Configuration
XP_PROFILE_COMPLETION=100
XP_SKILL_UPDATE=25
XP_COURSE_COMPLETION=200
XP_ASSESSMENT_COMPLETION=150
MAX_XP_PER_DAY=1000

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_REFRESH_INTERVAL=3600

# Jobs Matcher Configuration
MATCHER_SIMILARITY_THRESHOLD=0.75
MATCHER_MAX_RECOMMENDATIONS=20

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
GRAFANA_ADMIN_PASSWORD=admin

# GDPR Configuration
DATA_RETENTION_DAYS_LOGS=90
DATA_RETENTION_DAYS_ANALYTICS=365
DATA_RETENTION_DAYS_TRANSCRIPTS=30
ENABLE_DATA_PSEUDONYMIZATION=true
AUDIT_LOG_LEVEL=INFO

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Development Configuration
NODE_ENV=development
LOG_LEVEL=INFO
ENABLE_DEBUG=false