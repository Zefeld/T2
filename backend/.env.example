# Конфигурация для персонального ИИ-консультанта

# LM Studio настройки (Gemma 3)
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_MODEL_NAME=gemma-2-2b-it

# Настройки STT (Nemo Parakeet V3)
STT_MODEL_NAME=nemo-parakeet-tdt-0.6b-v3
STT_SAMPLE_RATE=16000

# Настройки TTS (Piper)
TTS_MODEL_PATH=models/piper/ru_RU-ruslan-medium.onnx
TTS_CONFIG_PATH=models/piper/ru_RU-ruslan-medium.onnx.json
TTS_DEFAULT_VOICE=en_US-lessac-medium

# Настройки сервера
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=True

# Пути для файлов
UPLOAD_DIR=uploads
MODELS_DIR=models
REPORTS_DIR=reports

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Настройки безопасности
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000