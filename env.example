# === Общие настройки ===
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000

# === База данных ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=career_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# === Redis ===
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=career:

# === JWT токены ===
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# === OIDC аутентификация ===
OIDC_ISSUER_URL=https://your-oidc-provider.com
OIDC_CLIENT_ID=career-platform
OIDC_CLIENT_SECRET=your-oidc-client-secret
OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
OIDC_SCOPES=openid profile email

# === API Gateway ===
GATEWAY_PORT=8080
GATEWAY_HOST=0.0.0.0

# === Web UI ===
WEB_UI_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080



# === Profile Service ===
PROFILE_SERVICE_PORT=8084

# === Gamification Service ===
GAMIFICATION_SERVICE_PORT=8085
XP_PROFILE_COMPLETION=100
XP_SKILL_UPDATE=25
XP_COURSE_COMPLETION=200
XP_ASSESSMENT_COMPLETION=150
MAX_XP_PER_DAY=1000

# === Analytics Service ===
ANALYTICS_SERVICE_PORT=8086
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_REFRESH_INTERVAL=3600

# === Jobs Matcher Service ===
JOBS_MATCHER_PORT=8087
MATCHER_SIMILARITY_THRESHOLD=0.75
MATCHER_MAX_RECOMMENDATIONS=20

# === Auth Service ===
AUTH_SERVICE_PORT=8088

# === Мониторинг и метрики ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# === Безопасность ===
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# === GDPR настройки ===
DATA_RETENTION_DAYS_PROFILES=2555  # 7 лет
DATA_RETENTION_DAYS_LOGS=90       # 3 месяца
DATA_RETENTION_DAYS_TRANSCRIPTS=365 # 1 год
ENABLE_DATA_ANONYMIZATION=true
DATA_EXPORT_FORMAT=json

# === Файловое хранилище ===
STORAGE_TYPE=local
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=audio/wav,audio/mp3,application/pdf,image/png,image/jpeg

# === Очереди и задачи ===
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential

# === Внешние интеграции ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="Career Platform" <noreply@yourcompany.com>

# === Локализация ===
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es,fr,de

# === Разработка и отладка ===
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=false
MOCK_EXTERNAL_SERVICES=false
